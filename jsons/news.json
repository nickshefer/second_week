{
    "form_name": "Создайте новость",
    "form_description": "Поделитесь своими эмоциями",
    "form_fields": [
        {
            "type": "text",
            "label": "Заголовок",
            "required": true,
            "placeholder": "Введите заголовок статьи",
            "maxlength": 150
        },
        {
            "type": "textarea",
            "label": "Содержание",
            "required": true,
            "placeholder": "Введите содержание статьи",
            "maxlength": 1000
        },
        {
            "type": "text",
            "label": "Теги",
            "required": false,
            "placeholder": "Вводите новые теги, разделяя их знаком |",
            "maxlength": 255
        },
        {
            "type": "text",
            "label": "Дата публикации",
            "required": true,
            "placeholder": "XX/XX/XXXX",
            "mask": "XX/XX/XXXX",
            "pattern": "^(0[1-9]|1[0-2])/(0[1-9]|[12][0-9]|3[01])/(19|20)\\d{2}$"
        },
        {
            "type": "file",
            "label": "Галлерея",
            "required": false,
            "formats": "image/png, image/jpeg, image/jpg",
            "max_size": 5242880,
            "max_count": 10
        },
        {
            "type": "checkbox",
            "label": "Выводить новость на главной странице",
            "required": false
        }
    ],
    "form_buttons": [
        {
            "name": "Отмена",
            "type": "button"
        },
        {
            "name": "Опубликовать",
            "type": "submit"
        }
    ]
}
